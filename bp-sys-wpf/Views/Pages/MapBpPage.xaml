<Page x:Class="bp_sys_wpf.Views.Pages.MapBpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bp_sys_wpf.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="690"
      d:DesignWidth="760"
      Title="MapBpPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark"/>
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ui:TextBlock">
                <Setter Property="Foreground"
                        Value="White"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid Margin="30,30,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ui:TextBlock Grid.Row="0"
                          Text="Pick"
                          FontSize="25"/>
            <ComboBox x:Name="Map_pick"
                      Grid.Row="1"
                      HorizontalAlignment="Left"
                      Width="200"
                      Height="50">
                <ComboBoxItem Content="军工厂"/>
                <ComboBoxItem Content="红教堂"/>
                <ComboBoxItem Content="圣心医院"/>
                <ComboBoxItem Content="湖景村"/>
                <ComboBoxItem Content="月亮河公园"/>
                <ComboBoxItem Content="永眠镇"/>
                <ComboBoxItem Content="唐人街"/>
                <ComboBoxItem Content="里奥的回忆"/>
            </ComboBox>
            <ui:TextBlock Grid.Row="2"
                          Text="Ban"
                          FontSize="25"/>
            <ComboBox x:Name="Map_ban"
                      Grid.Row="3"
                      HorizontalAlignment="Left"
                      Width="200"
                      Height="50">
                <ComboBoxItem Content="无Ban"/>
                <ComboBoxItem Content="军工厂"/>
                <ComboBoxItem Content="红教堂"/>
                <ComboBoxItem Content="圣心医院"/>
                <ComboBoxItem Content="湖景村"/>
                <ComboBoxItem Content="月亮河公园"/>
                <ComboBoxItem Content="永眠镇"/>
                <ComboBoxItem Content="唐人街"/>
                <ComboBoxItem Content="里奥的回忆"/>
            </ComboBox>
        </Grid>
    </Grid>
</Page>
