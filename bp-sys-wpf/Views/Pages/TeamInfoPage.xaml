                                    Icon="{Binding ButtonState.MainButtonState[2].Icon}"
                                    IsEnabled="{Binding ButtonState.MainButtonState[2].IsEnabled}" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
