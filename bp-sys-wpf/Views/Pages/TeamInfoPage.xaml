                                    Icon="{Binding ButtonState.AwayButtonState[4].Icon}"
                                    IsEnabled="{Binding ButtonState.AwayButtonState[4].IsEnabled}" />
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <ui:TextBox
                                    x:Name="AwaySurPlayer6"
                                    Width="150"
                                    Height="35"
                                    PlaceholderText="选手名称"
