                                    Content="{Binding ButtonState.MainButtonState[8].Content}"
                                    Icon="{Binding ButtonState.MainButtonState[8].Icon}"
                                    IsEnabled="{Binding ButtonState.MainButtonState[8].IsEnabled}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
