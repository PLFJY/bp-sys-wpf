<Window
    x:Class="bp_sys_wpf.Front"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:bp_sys_wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Front1"
    Title="前台"
    Width="1440"
    Height="810"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Viewbox>
        <Grid Width="1440" Height="810">
            <Grid.Background>
                <ImageBrush />
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="46*" />
                <RowDefinition Height="263*" />
                <RowDefinition Height="96*" />
            </Grid.RowDefinitions>
            <!--  比分条  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="200*" />
                    <ColumnDefinition Width="162*" />
                    <ColumnDefinition Width="150*" />
                    <ColumnDefinition Width="225*" />
                    <ColumnDefinition Width="150*" />
                    <ColumnDefinition Width="162*" />
                    <ColumnDefinition Width="191*" />
                    <ColumnDefinition Width="100*" />
                </Grid.ColumnDefinitions>
                <Image
                    x:Name="Logo_sur"
                    Grid.Column="0"
                    Width="90"
                    Height="90"
                    HorizontalAlignment="Right"
                    Source="{Binding TeamInfoViewModel.NowModel.NowSurTeam.LOGO}"
                    Stretch="UniformToFill" />
                <TextBlock
                    x:Name="Sur_team_name"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="40"
                    FontWeight="Bold"
                    Text="{Binding TeamInfoViewModel.NowModel.NowSurTeam.Name}"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="Sur_score"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="{Binding TeamInfoViewModel.NowModel.NowSurTeam.Score.FrontView}" />
                <TextBlock
                    x:Name="Sur_scoreS"
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource 华康POP体}"
                    FontSize="80"
                    FontWeight="Bold"
                    Text="{Binding TeamInfoViewModel.NowModel.NowSurTeam.Score.S}" />
                <TextBlock
                    x:Name="timmer"
                    Grid.Column="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource 汉仪第五人格体}"
                    FontSize="70"
                    FontWeight="Bold"
                    Text="{Binding TimmerViewModel.CountdownTime}" />
                <TextBlock
                    x:Name="Hun_scoreS"
                    Grid.Column="5"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource 华康POP体}"
                    FontSize="80"
                    FontWeight="Bold"
                    Text="{Binding TeamInfoViewModel.NowModel.NowHunTeam.Score.S}" />
                <TextBlock
                    x:Name="Hun_score"
                    Grid.Column="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="{Binding TeamInfoViewModel.NowModel.NowHunTeam.Score.FrontView}" />
                <TextBlock
                    x:Name="Hun_team_name"
                    Grid.Column="7"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="40"
                    FontWeight="Bold"
                    Text="{Binding TeamInfoViewModel.NowModel.NowHunTeam.Name}"
                    TextWrapping="Wrap" />

                <Image
                    x:Name="Logo_hun"
                    Grid.Column="8"
                    Width="90"
                    Height="90"
                    HorizontalAlignment="Left"
                    Source="{Binding TeamInfoViewModel.NowModel.NowHunTeam.LOGO}"
                    Stretch="UniformToFill" />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="69*" />
                    <ColumnDefinition Width="501*" />
                    <ColumnDefinition Width="292*" />
                    <ColumnDefinition Width="438*" />
                    <ColumnDefinition Width="140*" />
                </Grid.ColumnDefinitions>
                <!--  监管Ban  -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="64" />
                        <RowDefinition Height="59" />
                        <RowDefinition Height="59" />
                        <RowDefinition Height="18" />
                    </Grid.RowDefinitions>
                    <Image
                        x:Name="Hun_ban_1"
                        Grid.Row="0"
                        Width="56"
                        Height="56"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Source="{Binding BpShowViewModel.BpShow.HunBan[0]}"
                        Stretch="UniformToFill" />
                    <Image
                        x:Name="Hun_ban_2"
                        Grid.Row="1"
                        Width="56"
                        Height="56"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Source="{Binding BpShowViewModel.BpShow.HunBan[1]}"
                        Stretch="UniformToFill" />
                    <Image
                        x:Name="Hun_ban_3"
                        Grid.Row="2"
                        Width="56"
                        Height="56"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Source="{Binding BpShowViewModel.BpShow.HunBan[2]}"
                        Stretch="UniformToFill" />
                </Grid>
                <Grid Grid.Column="0" Panel.ZIndex="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="64" />
                        <RowDefinition Height="59" />
                        <RowDefinition Height="59" />
                        <RowDefinition Height="18" />
                    </Grid.RowDefinitions>
                    <Image
                        x:Name="Hun_no_ban_1"
                        Width="56"
                        Height="56"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Stretch="UniformToFill"
                        Visibility="{Binding BpShowViewModel.BpShow.HunBanLock[0]}" />
                    <Image
                        x:Name="Hun_no_ban_2"
                        Grid.Row="1"
                        Width="56"
                        Height="56"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Stretch="UniformToFill"
                        Visibility="{Binding BpShowViewModel.BpShow.HunBanLock[1]}" />
                    <Image
                        x:Name="Hun_no_ban_3"
                        Grid.Row="2"
                        Width="56"
                        Height="56"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Stretch="UniformToFill"
                        Visibility="{Binding BpShowViewModel.BpShow.HunBanLock[2]}" />
                </Grid>
                <Grid Grid.Column="1" VerticalAlignment="Bottom">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="170" />
                        <RowDefinition Height="11" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="126*" />
                            <ColumnDefinition Width="125*" />
                            <ColumnDefinition Width="125*" />
                            <ColumnDefinition Width="125*" />
                        </Grid.ColumnDefinitions>
                        <!--  求生Pick1  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="141*" />
                                <RowDefinition Height="26*" />
                            </Grid.RowDefinitions>
                            <Image
                                x:Name="Sur_pick_1"
                                Width="119"
                                Margin="0,0,0,1"
                                HorizontalAlignment="Right"
                                Panel.ZIndex="-1"
                                Source="{Binding BpShowViewModel.BpShow.SurPick[0].ChartcherHalfImage}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="SurPicking1"
                                Width="119"
                                HorizontalAlignment="Right"
                                Panel.ZIndex="2"
                                Stretch="Fill"
                                Visibility="Hidden" />
                            <TextBlock
                                x:Name="Sur_1_player"
                                Grid.Row="1"
                                Margin="15,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding TeamInfoViewModel.NowModel.NowSurPlayerId[0]}" />
                        </Grid>
                        <!--  求生Pick2  -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="141*" />
                                <RowDefinition Height="26*" />
                            </Grid.RowDefinitions>
                            <Image
                                x:Name="Sur_pick_2"
                                Width="119"
                                Margin="0,0,0,1"
                                HorizontalAlignment="Right"
                                Panel.ZIndex="-1"
                                Source="{Binding BpShowViewModel.BpShow.SurPick[1].ChartcherHalfImage}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="SurPicking2"
                                Width="119"
                                HorizontalAlignment="Right"
                                Panel.ZIndex="2"
                                Stretch="Fill"
                                Visibility="Hidden" />
                            <TextBlock
                                x:Name="Sur_2_player"
                                Grid.Row="1"
                                Margin="15,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding TeamInfoViewModel.NowModel.NowSurPlayerId[1]}" />
                        </Grid>
                        <!--  求生Pick3  -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="141*" />
                                <RowDefinition Height="26*" />
                            </Grid.RowDefinitions>
                            <Image
                                x:Name="Sur_pick_3"
                                Width="119"
                                Margin="0,0,0,1"
                                HorizontalAlignment="Right"
                                Panel.ZIndex="-1"
                                Source="{Binding BpShowViewModel.BpShow.SurPick[2].ChartcherHalfImage}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="SurPicking3"
                                Width="119"
                                HorizontalAlignment="Right"
                                Panel.ZIndex="2"
                                Stretch="Fill"
                                Visibility="Hidden" />
                            <TextBlock
                                x:Name="Sur_3_player"
                                Grid.Row="1"
                                Margin="15,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding TeamInfoViewModel.NowModel.NowSurPlayerId[2]}" />
                        </Grid>
                        <!--  求生Pick4  -->
                        <Grid Grid.Column="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="141*" />
                                <RowDefinition Height="26*" />
                            </Grid.RowDefinitions>
                            <Image
                                x:Name="Sur_pick_4"
                                Width="119"
                                Margin="0,0,0,1"
                                HorizontalAlignment="Right"
                                Panel.ZIndex="-1"
                                Source="{Binding BpShowViewModel.BpShow.SurPick[3].ChartcherHalfImage}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="SurPicking4"
                                Width="119"
                                HorizontalAlignment="Right"
                                Panel.ZIndex="2"
                                Stretch="Fill"
                                Visibility="Hidden" />
                            <TextBlock
                                x:Name="Sur_4_player"
                                Grid.Row="1"
                                Margin="15,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding TeamInfoViewModel.NowModel.NowSurPlayerId[3]}" />
                        </Grid>
                    </Grid>
                </Grid>
                <!--  中间区域  -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="136.5" />
                        <RowDefinition Height="55.5" />
                    </Grid.RowDefinitions>
                    <!--  地图  -->
                    <Image
                        x:Name="Map"
                        Grid.Row="0"
                        Height="115"
                        Margin="0,16,0,0"
                        VerticalAlignment="Top"
                        Source="{Binding BpShowViewModel.BpShow.MapPick}" />
                    <Grid Grid.Row="1">
                        <StackPanel
                            Margin="87.8,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <Image
                                x:Name="Global_ban_1"
                                Width="24.5"
                                Height="24.5"
                                Source="{Binding BpShowViewModel.BpShow.SurGlobalBan[0]}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="Global_ban_2"
                                Width="24.5"
                                Height="24.5"
                                Margin="4,0,0,0"
                                Source="{Binding BpShowViewModel.BpShow.SurGlobalBan[1]}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="Global_ban_3"
                                Width="24.5"
                                Height="24.5"
                                Margin="3.5,0,0,0"
                                Source="{Binding BpShowViewModel.BpShow.SurGlobalBan[2]}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="Global_ban_4"
                                Width="24.5"
                                Height="24.5"
                                Margin="3.8,0,0,0"
                                Source="{Binding BpShowViewModel.BpShow.SurGlobalBan[3]}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="Global_ban_5"
                                Width="24.5"
                                Height="24.5"
                                Margin="3.3,0,0,0"
                                Source="{Binding BpShowViewModel.BpShow.SurGlobalBan[4]}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="Global_ban_6"
                                Width="24.5"
                                Height="24.5"
                                Margin="3.9,0,0,0"
                                Source="{Binding BpShowViewModel.BpShow.SurGlobalBan[5]}"
                                Stretch="UniformToFill" />
                        </StackPanel>
                        <StackPanel
                            Margin="128.5,26.5,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <Image
                                x:Name="Global_ban_7"
                                Width="24.5"
                                Height="24.5"
                                Source="{Binding BpShowViewModel.BpShow.SurGlobalBan[6]}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="Global_ban_8"
                                Width="24.5"
                                Height="24.5"
                                Margin="5.5,0,0,0"
                                Source="{Binding BpShowViewModel.BpShow.SurGlobalBan[7]}"
                                Stretch="UniformToFill" />
                            <Image
                                x:Name="Global_ban_9"
                                Width="24.5"
                                Height="24.5"
                                Margin="4,0,0,0"
                                Source="{Binding BpShowViewModel.BpShow.SurGlobalBan[8]}"
                                Stretch="UniformToFill" />
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1" Panel.ZIndex="1">
                        <StackPanel
                            Margin="87.8,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <Image
                                x:Name="Global_no_ban_1"
                                Width="24.5"
                                Height="24.5"
                                Stretch="Fill"
                                Visibility="{Binding BpShowViewModel.BpShow.SurGlobalBanLock[0]}" />
                            <Image
                                x:Name="Global_no_ban_2"
                                Width="24.5"
                                Height="24.5"
                                Margin="4,0,0,0"
                                Stretch="Fill"
                                Visibility="{Binding BpShowViewModel.BpShow.SurGlobalBanLock[1]}" />
                            <Image
                                x:Name="Global_no_ban_3"
                                Width="24.5"
                                Height="24.5"
                                Margin="3.5,0,0,0"
                                Stretch="Fill"
                                Visibility="{Binding BpShowViewModel.BpShow.SurGlobalBanLock[2]}" />
                            <Image
                                x:Name="Global_no_ban_4"
                                Width="24.5"
                                Height="24.5"
                                Margin="3.8,0,0,0"
                                Stretch="Fill"
                                Visibility="{Binding BpShowViewModel.BpShow.SurGlobalBanLock[3]}" />
                            <Image
                                x:Name="Global_no_ban_5"
                                Width="24.5"
                                Height="24.5"
                                Margin="3.3,0,0,0"
                                Stretch="Fill"
                                Visibility="{Binding BpShowViewModel.BpShow.SurGlobalBanLock[4]}" />
                            <Image
                                x:Name="Global_no_ban_6"
                                Width="24.5"
                                Height="24.5"
                                Margin="3.9,0,0,0"
                                Stretch="Fill"
                                Visibility="{Binding BpShowViewModel.BpShow.SurGlobalBanLock[5]}" />
                        </StackPanel>
                        <StackPanel
                            Margin="128.5,26.5,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <Image
                                x:Name="Global_no_ban_7"
                                Width="24.5"
                                Height="24.5"
                                Stretch="Fill"
                                Visibility="{Binding BpShowViewModel.BpShow.SurGlobalBanLock[6]}" />
                            <Image
                                x:Name="Global_no_ban_8"
                                Width="24.5"
                                Height="24.5"
                                Margin="5.5,0,0,0"
                                Stretch="Fill"
                                Visibility="{Binding BpShowViewModel.BpShow.SurGlobalBanLock[7]}" />
                            <Image
                                x:Name="Global_no_ban_9"
                                Width="24.5"
                                Height="24.5"
                                Margin="4,0,0,0"
                                Stretch="Fill"
                                Visibility="{Binding BpShowViewModel.BpShow.SurGlobalBanLock[8]}" />
                        </StackPanel>
                    </Grid>
                    <!--  全局ban  -->
                </Grid>
                <!--  监管Pick  -->
                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="89*" />
                        <RowDefinition Height="7*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="76*" />
                            <RowDefinition Height="13*" />
                        </Grid.RowDefinitions>
                        <Image
                            x:Name="Hun_pick"
                            Width="430"
                            Height="143"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Panel.ZIndex="-1"
                            Source="{Binding BpShowViewModel.BpShow.HunPick.ChartcherHalfImage}"
                            Stretch="UniformToFill" />
                        <Image
                            x:Name="HunPicking"
                            Width="430"
                            Height="143"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Panel.ZIndex="2"
                            Stretch="Fill"
                            Visibility="Hidden" />
                        <TextBlock
                            x:Name="Hun_player"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding TeamInfoViewModel.NowModel.NowHunPlayerId}" />
                    </Grid>
                </Grid>
                <!--  求生Ban  -->
                <Grid Grid.Column="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="91*" />
                        <RowDefinition Height="101*" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Margin="0,0,0,7"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <Image
                            x:Name="Sur_ban_1"
                            Width="56"
                            Height="56"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Source="{Binding BpShowViewModel.BpShow.SurBan[0]}"
                            Stretch="UniformToFill" />
                        <Image
                            x:Name="Sur_ban_2"
                            Width="56"
                            Height="56"
                            Margin="4,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Source="{Binding BpShowViewModel.BpShow.SurBan[1]}"
                            Stretch="UniformToFill" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,7,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                        <Image
                            x:Name="Sur_ban_3"
                            Width="56"
                            Height="56"
                            HorizontalAlignment="Left"
                            Source="{Binding BpShowViewModel.BpShow.SurBan[2]}"
                            Stretch="UniformToFill" />
                        <Image
                            x:Name="Sur_ban_4"
                            Width="56"
                            Height="56"
                            Margin="4,0,0,0"
                            HorizontalAlignment="Left"
                            Source="{Binding BpShowViewModel.BpShow.SurBan[3]}"
                            Stretch="UniformToFill" />
                    </StackPanel>
                </Grid>
            </Grid>
            <!--  Ban Pick  -->
        </Grid>
    </Viewbox>
</Window>
