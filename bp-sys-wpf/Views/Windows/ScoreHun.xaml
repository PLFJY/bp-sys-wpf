<Window
    x:Class="bp_sys_wpf.ScoreHun"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:bp_sys_wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ScoreHun1"
    Title="游戏内比分监管者"
    Width="654"
    Height="196"
    MouseDown="ScoreHun1_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*" />
            <ColumnDefinition Width="247*" />
            <ColumnDefinition Width="84*" />
            <ColumnDefinition Width="204*" />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Views/Windows/score_bg_h.png" />
        </Grid.Background>
        <Image
            x:Name="Logo"
            Grid.Column="3"
            Width="180"
            Height="180"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            Source="{Binding TeamInfoViewModel.NowModel.NowHunTeam.LOGO}"
            Stretch="UniformToFill" />
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="78" />
                <RowDefinition Height="115" />
            </Grid.RowDefinitions>
            <Label
                x:Name="TeamName"
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding TeamInfoViewModel.NowModel.NowHunTeam.Name}"
                FontSize="54"
                FontWeight="Bold"
                Foreground="White" />
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel>
                    <Label
                        x:Name="Lose"
                        Content="{Binding TeamInfoViewModel.NowModel.NowHunTeam.Score.L}"
                        FontFamily="DFPOP1W5-B5"
                        FontSize="48"
                        Foreground="White" />
                    <Label
                        Name="LoseWord"
                        Content="L"
                        FontFamily="汉仪第五人格体简"
                        FontSize="45"
                        Foreground="White" />
                </StackPanel>
                <StackPanel Margin="30,0,0,0">
                    <Label
                        x:Name="Tie"
                        Content="{Binding TeamInfoViewModel.NowModel.NowHunTeam.Score.D}"
                        FontFamily="DFPOP1W5-B5"
                        FontSize="48"
                        Foreground="White" />
                    <Label
                        Name="AllWord"
                        Content="D"
                        FontFamily="汉仪第五人格体简"
                        FontSize="45"
                        Foreground="White" />
                </StackPanel>
                <StackPanel Margin="30,0,0,0">
                    <Label
                        x:Name="Win"
                        Content="{Binding TeamInfoViewModel.NowModel.NowHunTeam.Score.W}"
                        FontFamily="DFPOP1W5-B5"
                        FontSize="48"
                        Foreground="White" />
                    <Label
                        Name="WinWord"
                        Content="W"
                        FontFamily="汉仪第五人格体简"
                        FontSize="45"
                        Foreground="White" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <Label
            x:Name="S"
            Width="85"
            Height="160"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            Content="{Binding TeamInfoViewModel.NowModel.NowHunTeam.Score.S}"
            FontFamily="DFPOP1W5-B5"
            FontSize="150"
            Foreground="Red" />
    </Grid>
</Window>
