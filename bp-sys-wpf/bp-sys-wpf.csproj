<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<RootNamespace>bp_sys_wpf</RootNamespace>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWPF>true</UseWPF>
		<ApplicationIcon>icon.ico</ApplicationIcon>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DebugType>portable</DebugType>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DebugType>portable</DebugType>
	</PropertyGroup>

	<ItemGroup>
		<None Include="Resource\**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>
	<ItemGroup>
		<None Include="pic\**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>
	<ItemGroup>
		<Content Include="icon.ico" />
	</ItemGroup>
	<ItemGroup>
		<None Include="..\.editorconfig" Link=".editorconfig" />
	</ItemGroup>
	<ItemGroup>
		<None Include="7z\**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>
	<ItemGroup>
	  <None Remove="Header.PNG" />
	  <None Remove="Views\HomeHeader.png" />
	  <None Remove="Views\Pages\HomeHeader.png" />
	  <None Remove="Views\Windows\BorrowedTime.png" />
	  <None Remove="Views\Windows\bp.png" />
	  <None Remove="Views\Windows\FlywheelEffect.png" />
	  <None Remove="Views\Windows\interlude_bg.png" />
	  <None Remove="Views\Windows\KneeJerkReflex.png" />
	  <None Remove="Views\Windows\name.png" />
	  <None Remove="Views\Windows\TideTurner.png" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Flurl" Version="4.0.0" />
		<PackageReference Include="Flurl.Http" Version="4.0.2" />
		<PackageReference Include="ini-parser" Version="2.5.2" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<PackageReference Include="WPF-UI" Version="3.0.4" />
	</ItemGroup>
	<ItemGroup>
	  <Resource Include="Header.PNG" />
	  <Resource Include="Views\HomeHeader.png" />
	  <Resource Include="Views\Pages\HomeHeader.png" />
	  <Resource Include="Views\Windows\BorrowedTime.png" />
	  <Resource Include="Views\Windows\bp.png" />
	  <Resource Include="Views\Windows\FlywheelEffect.png" />
	  <Resource Include="Views\Windows\interlude_bg.png" />
	  <Resource Include="Views\Windows\KneeJerkReflex.png" />
	  <Resource Include="Views\Windows\name.png" />
	  <Resource Include="Views\Windows\TideTurner.png" />
	</ItemGroup>
	<ItemGroup>
	  <None Update="CharactersList.txt">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="TeamInfoExample.json">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
</Project>
